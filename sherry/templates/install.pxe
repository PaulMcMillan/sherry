#!ipxe

# DHCP until it works
:retry_dhcp
dhcp || goto retry_dhcp

# NOTE: syslog ip is set via DHCP
echo Running ${filename}
echo syslog server is ${syslog}

# load the installer kernel and initrd to install linux
kernel {{ request.url_root }}releases/{{ release }}/vmlinuz {{ kernel_opts }}
initrd {{ request.url_root }}releases/{{ release }}/initrd.img
boot